<%# <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <%= stylesheet_link_tag 'style', media: 'all', 'data-turbolinks-track': 'reload' %>
<%# </head> %>
<body>
    <div class="list-container">
        <header class="header">
            <h1>Users</h1>
            <%= link_to "New User", register_path, class: "submit-btn" %>
        </header>
        <main class="user-grid">
            <% @users.each do |user| %>
                <div class="user-card">
                    <h2><%= user.first_name %> <%= user.last_name %></h2>
                    <p><%= user.email %></p>
                    <div class="actions">
                        <span class="action">Detail</span>
                        <span class="action">Edit</span>
                        <span class="action">Delete</span>
                    </div>
                </div>
            <% end %>
        </main>
    </div>
</body>
<%# </html> %>